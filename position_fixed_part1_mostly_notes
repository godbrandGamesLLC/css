div.fixed {
  position: fixed;
  bottom: 0;
  right: 0;
  width: 300px;
  border: 4px solid #FF0000;
  font-size: 30px;
}

div.leftFixed {
  position: fixed;
  bottom: 0;
  right: 7;
  width: 300px;
  border: 4px solid #800080;
  font-size: 30px;
}
</style>
